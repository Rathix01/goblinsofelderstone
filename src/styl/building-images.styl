.building-images
	display flex
	flex-direction row
	margin 10px auto
	max-width 1150px
	width 100%
	height 200px

	@media(max-width 900px)
		height 150px

	@media(max-width 600px)
		height 600px
		flex-direction column

	img
		width 33%
		height 100%
		margin 2px
		transform-origin 50% 50%
		transition transform 0.3s ease-out

		@media(max-width 600px)
			width 95%
			height 220px
			margin 3px auto

