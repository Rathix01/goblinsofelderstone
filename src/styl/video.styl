.video
	position relative
	padding-top 80px
	text-align center
	max-width 1168px
	margin 0px auto
	overflow hidden

	@media(max-width 900px)
		padding-top 40px

	img
		margin 0px auto;
		width 100%

	.video-iframe
		width 100%
		margin 30px auto 0px
		border none
		outline none

	.video-play-button
		position absolute
		top 80px
		width 100%
		height 100%
		cursor pointer
		background-size 100% 100%

		&:before
			content " "
			height 60px
			width 100px
			background #3D7627 url(images/play-button.png) no-repeat center center
			position absolute
			top 40%
			left 50%
			margin-left -50px
			border-radius 10px

			@media(max-width 500px)
				transform scale(.75)
				top 25%

		&:hover
			opacity 1

			&:before
				background #598526 url(images/play-button.png) no-repeat center center